{
  "ConnectionStrings": {
    "DefaultConnection": "Host=host.docker.internal;Port=5432;Database=fitness-tracker-api;Username=postgres;Password=postgres"
  },
  "Auth": {
    "Key": "super-secret-jwt-key-1234A-at-least-32-chars-long-btw",
    "Issuer": "jwt-issuer",
    "Audience": "jwt-audience",
    "AccessLifetimeMinutes": 15,
